
MULTILIB_OPTIONS     = mlittle-endian/mbig-endian
MULTILIB_DIRNAMES    = little big
MULTILIB_MATCHES     = mlittle-endian=EL
MULTILIB_MATCHES     = mbig-endian=EB
MULTILIB_EXCEPTIONS  =

# For arch
MULTILIB_OPTIONS     += mcpu=ck801/mcpu=ck802/mcpu=ck803/mcpu=ck810
MULTILIB_DIRNAMES    += ck801/ck802 ck803 ck810

# For arch ck801
MULTILIB_MATCHES     += mcpu?ck801=march?ck801

# For arch ck802
MULTILIB_MATCHES     += mcpu?ck802=march?ck802
MULTILIB_MATCHES     += mcpu?ck802=mcpu?ck802j

# For arch ck803
MULTILIB_MATCHES     += mcpu?ck803=march?ck803
MULTILIB_MATCHES     += mcpu?ck803=mcpu?ck803e

# For arch ck803s
MULTILIB_MATCHES     += mcpu?ck803=march?ck803s
MULTILIB_MATCHES     += mcpu?ck803=mcpu?ck803s

# For arch ck810
MULTILIB_MATCHES     += mcpu?ck810=march?ck810
MULTILIB_MATCHES     += mcpu?ck810=mcpu?ck810f
MULTILIB_MATCHES     += mcpu?ck810=mcpu?ck810e
MULTILIB_MATCHES     += mcpu?ck810=mcpu?ck810ef

# For arch ck807
MULTILIB_MATCHES     += mcpu?ck810=march?ck807
MULTILIB_MATCHES     += mcpu?ck810=mcpu?ck807


